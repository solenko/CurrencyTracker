<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @country.name %>
</p>

<p>
  <b>Code:</b>
  <%= @country.code %>
</p>

<p>
  <b>Status:</b>
  <%= @country.visited_by?(current_user) ? 'Visited' : 'Not Visited' %>
</p>

<p>
  <b>Currencies:</b>
  <ul>
    <% @country.currencies.each do |currency| %>
      <li><%= link_to currency.name, currency %></li>
    <% end %>
  </ul>
</p>

<%- if @country.visited_by?(current_user) -%>
    <%= link_to 'Mark Not Visited', country_visits_path(@country), :method => :delete %> |
<%- else -%>
    <%= link_to 'Mark Visited', country_visits_path(@country), :method => :post %> |
<%- end -%>
<%= link_to 'Edit', edit_country_path(@country) %> |
<%= link_to 'Back', countries_path %>